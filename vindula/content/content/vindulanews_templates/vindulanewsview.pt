<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="vindula.content">

<body>
<metal:main fill-slot="content-core">
 	<metal:content-core define-macro="content-core"
						tal:define="vindulacomments python:context.restrictedTraverse('@@vindula-comments-view');
				  					contcomments python:vindulacomments.cont_comments(context);">
		<!-- Data -->
		<div class="info_topoBoxTipo">
			<div class="info_data" tal:condition="context/effective_date">
				<h4 tal:content="python: context.effective_date.strftime('%d/%m/%Y / %H:%m')"></h4>
			</div>
			<div class="indicacao_comentario" tal:condition="python: contcomments!= 0">
				<h4 tal:content="string:ComentÃ¡rios (${contcomments})"></h4>
			</div>
			<div class="visualClear"></div>
		</div>
			
		<!-- start: New -->
		<div class="info"> 
		
			<div class="titulo_info">
				<h2 tal:content="context/Title"></h2>
				<div class="descricao_titulo">
					<h4 tal:content="python: 'Autor: %s' % context.getOwner().getUserName()"></h4>
					<p tal:content="context/summary"></p>
				</div>
			</div>
		
			<div metal:use-macro="context/vindula-content-share/macros/share" />
		
			<div class="img_descricao">
				<div class="img_info" tal:condition="context/image">
					<div class="bk_topo_imgDestaque">
						<img alt="" src="++theme++vindula.themedefault/images/bkgs/bk_topo_imgDestaque.png"/>
					</div>
					<div class="bk_cont_imgDestaque">
						<img alt="" width="156" tal:attributes="src string:${context/image/to_object/absolute_url}/image_mini;
													alt context/imageCaption; title context/imageCaption;"/>
					</div>
					<div class="bk_rodape_imgDestaque">
						<img alt="" src="++theme++vindula.themedefault/images/bkgs/bk_rodape_imgDestaque.png"/>
					</div>
				</div>							
				<div class="descricao_destaque texto_pagina" tal:content="structure context/text/output">Text</div>
				<div class="visualClear"></div>
			</div>
		
		</div>
		<!-- end: New -->
		<div metal:use-macro="context/vindula-content-share/macros/share" />
	</metal:content-core>
</metal:main>
</body>
</html>