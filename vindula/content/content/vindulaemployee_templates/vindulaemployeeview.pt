<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="vindula.content">

<head>
	
</head>

<body>
	<metal:main fill-slot="main">
		<div class="row">
			<div class="large-8 columns">		
				<div class="large-4 columns photo-func-equipe" tal:condition="context/getImageRelac | nothing">
					<img tal:attributes="src python: context.getImageRelac().absolute_url()+'/image_tile';
													     alt context/imageCaption; title context/imageCaption;">
				</div>
				<div class="large-8 columns info-func-equipe">
					<div class="cargo-func">
						<h4 tal:content="context/cargo | nothing">Presidente Geral</h4>
					</div>
					<div class="nome-func">
						<a tal:attributes="href context/absolute_url" tal:content="context/title | nothing">Matheus Spagiari</a>
					</div>
					<div class="more-info-func">
						<span tal:content="context/description">13Âª</span>
					</div>
				</div>
			</div>
			<div class="large-4 columns">
				<div class="info-email">
					<div class="icon-info-email">
						<img src="">
					</div>
					<div class="content-email">
						<span tal:content="context/getEmail"></span>
					</div>
				</div>
				<div class="info-tel">
					<div class="icon-tel">
					</div>
					<div class="content-tel">
						<span tal:content="context/getPhone_number"></span>
					</div>
				</div>
			</div>
		</div>		
		
		<div class="row">
			<div class="large-12 columns">
				<p tal:content="structure context/getText" class="desc-biografia">
				</p>
			</div>
		</div>	
	</metal:main>
</body>

</html>
