<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="vindula.content">

	<head>
 		<metal:block fill-slot="top_slot">
            <tal:dummy tal:define="disable_column_one python:request.set('disable_plone.leftcolumn',1);"/>

        </metal:block>
	</head>
	<body>
		<metal:main fill-slot="content-core" >

			<div class="row">
				<div class="columns large-9"
                     tal:define="defaulValue python: view.getDefaultValue('home_principal')"
					 tal:condition="python: context.getLayout_content() or defaulValue">

					<tal:def define="context python:context.getLayout_content() or defaulValue">
     					<metal:block metal:use-macro="context/@@layout-view/macros/page"/>
     				</tal:def>

				</div>
				<div class="columns large-3"
                     tal:define="defaulValue python: view.getDefaultValue('portlet_esquerdo')"
					 tal:condition="python: context.getLayout_accessory() or defaulValue">

					<tal:def define="context python:context.getLayout_accessory() or defaulValue;
									 columns_accessory python:True" >
      					<metal:block metal:use-macro="context/@@layout-view/macros/page"/>
					</tal:def>

				</div>
			</div>
		</metal:main>
	</body>
</html>
