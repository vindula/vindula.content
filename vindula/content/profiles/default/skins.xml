<?xml version="1.0"?>
<object name="portal_skins"
        meta_type="Plone Skins Tool"
        allow_any="False"
        cookie_persistence="False"
        request_varname="plone_skin">

	<object name="vindula_content_templates"
	        meta_type="Filesystem Directory View"
	        directory="vindula.content:skins/vindula_content_templates"/>
 
	<skin-path name="*">
		<layer insert-after="custom" 
		       name="vindula_content_templates"/>
	</skin-path>
</object>

