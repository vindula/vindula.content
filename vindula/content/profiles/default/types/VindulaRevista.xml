<?xml version="1.0"?>
<object name="VindulaRevista"
        meta_type="Factory-based Type Information with dynamic views"
        xmlns:i18n="http://xml.zope.org/namespaces/i18n">
 
	 <!-- Basic metadata -->
	 <property name="title">Revista</property>
	 <property name="i18n_domain">vindula.content</property>
	 <property name="description">Conteúdo padrão para inclusão de publicações no Vindula.</property>
	 <property name="content_icon">++resource++vindula.content.images/vindulanews.png</property>
	 <property name="content_meta_type">VindulaRevista</property>
	 <property name="product">vindula.content</property>
	 <property name="factory">addVindulaRevista</property>
	 <property name="immediate_view">view</property>
	 <property name="allow_discussion">True</property>
	 <property name="global_allow">True</property>
	 <property name="filter_content_types">False</property>
	 <property name="allowed_content_types" />
	 <property name="view_methods">view</property>
	 
	 <property name="default_view">view</property>
	 <property name="default_view_fallback">False</property>
	
	 <alias from="(Default)" to="view"/>
	 <alias from="index.html" to="(dynamic view)"/>
	 <alias from="view" to="(selected layout)"/>
	 <alias from="edit" to="base_edit"/>
	 <action title="View" 
		     action_id="view"
		     category="object" 
		     condition_expr=""
		     url_expr="string:${object_url}" 
		     visible="True">
		 	<permission value="View"/>
	 </action>
	 
	 <action title="Edit" 
		     action_id="edit"
		     category="object" 
		     condition_expr=""
		     url_expr="string:${object_url}/edit" 
		     visible="True">
	 		<permission value="Modify portal content"/>
	 </action>

</object>
