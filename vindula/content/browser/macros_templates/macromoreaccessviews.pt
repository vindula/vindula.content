<metal:view_macro define-macro="view"
                  tal:define="view_macro python:context.restrictedTraverse('macro_more_access_content');
                              portal_type portal_type|request/portal_type|nothing;
                              list_itens python: view_macro.list_files(portal_type)">

    <h2>Mas Acessados </h2>

    <div>

        <ul>
            <tal:rep repeat="item list_itens">
                <li><a tal:define="ctx item/content/getObject"
                       tal:attributes="href ctx/absolute_url"
                       tal:content= "ctx/Title"></a></li>
            </tal:rep>
        </ul>
    </div>

</metal:view_macro>