<metal:view_macro define-macro="view"
                  tal:define="view_macro python:context.restrictedTraverse('macro-propertis-content');">
    <h2>Propriedades</h2>

    Nome:<p tal:content="context/Title">Documento</p>
    Descrição:<p tal:content="context/Description"> </p>
    Tipo: <p tal:content="context/portal_type"></p>
    Criador: <p tal:content="view_macro/creator"></p>
    Data Criação: <p tal:content="view_macro/creation_date"></p>

    <h3>Modificações</h3>
    <tal:rep repeat="mod view_macro/gethistory">
        Modificação: <p tal:content="mod/actor"></p>
        Data Modificação: <p tal:content="mod/date"></p>

    </tal:rep>
    Responsável: <p tal:content="view_macro/responsible"></p>



</metal:view_macro>