                            <div class="columns small-8">
                                <a href="#" tal:attributes="href obj/absolute_url"
                                                    tal:content="obj/Title">Nova diretoria da Opas visita Bio</a>
                            </div>
                        </div>
                    </div>
                </tal:rep>
            </div>

        </metal:view_macro>

